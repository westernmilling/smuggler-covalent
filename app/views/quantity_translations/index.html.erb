<table class="table table-striped table-with-link-column">
  <thead>
  <tr>
    <th>Sender</th>
    <th>Expression</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% if @translations.each do |translation| %>
    <tr>
      <td><%= translation.sender_value %></td>
      <td><%= translation.expression %></td>
      <td nowrap>
        <%= link_to [translation, :return_url => return_url(request.original_url)],
                    class: 'btn btn-default btn-icon btn-sm hidden-print' do %>
            <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
      </td>
    </tr>
  <% end.empty? %>
    <tr>
      <td colspan="4">No quantity translations found</td><td></td>
    </tr>
  <% end %>
  </tbody>
</table>
