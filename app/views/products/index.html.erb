<table class="table table-striped table-with-link-column">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% if @products.each do |product| %>
    <tr>
      <td nowrap><%= product.name %></td>
      <td nowrap>              
        <%= link_to [product, :return_url => return_url(request.original_url)],
                    class: 'btn btn-default btn-icon btn-sm hidden-print' do %>
            <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
      </td>
    </tr>
  <% end.empty? %>
    <tr>
      <td colspan="2">No products found</td><td></td>
    </tr>
  <% end %>
  </tbody>
</table>