<table class="table table-striped table-with-link-column">
  <thead>
  <tr>
    <th>Sender</th>
    <th colspan="2">Source</th>
    <th>Entity</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% if @entity_translations.each do |entity_translation| %>
    <tr>
      <td><%= entity_translation.sender_value %></td>
      <td><%= entity_translation.source_field %></td>
      <td><%= entity_translation.source_value %></td>
      <td nowrap><%= entity_translation.entity.cached_full_name %></td>
      <td nowrap>              
        <%= link_to [entity_translation, :return_url => return_url(request.original_url)],
                    class: 'btn btn-default btn-icon btn-sm hidden-print' do %>
            <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
      </td>
    </tr>
  <% end.empty? %>
    <tr>
      <td colspan="4">No entity translations found</td><td></td>
    </tr>
  <% end %>
  </tbody>
</table>