<table class="table table-striped table-with-link-column">
  <thead>
  <tr>
    <th>PO Date</th>
    <th>PO Number</th>
    <th>Ship To</th>    
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% if @purchase_orders.each do |purchase_order| %>
    <tr>
      <td><%= purchase_order.date %></td>
      <td><%= purchase_order.number %></td>
      <td><%= purchase_order.ship_to_entity %></td>
      <td nowrap>              
        <%= link_to [purchase_order, :return_url => return_url(request.original_url)],
                    class: 'btn btn-default btn-icon btn-sm hidden-print' do %>
            <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
      </td>
    </tr>
  <% end.empty? %>
    <tr>
      <td colspan="4">No purchase orders found</td><td></td>
    </tr>
  <% end %>
  </tbody>
</table>